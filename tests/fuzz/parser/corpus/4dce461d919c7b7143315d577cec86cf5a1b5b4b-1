kubernetes:
 manifest: |
    apiVersion: v1
    kind: Service
    metadata:
      name: nginx
      labels:
       app: nginx
       tier: backend
       role: master
    spec:
      ports:
      - port: 80
        targetPort: 80
      selector:
        app: nginx
        tier: backend
        role: master
    ---
    apiVersion: apps/v1 # for versions before 1.9.0 use apps/v1beta2
    kind: Deployment
    metadata:
      name: nginx-deployment
    spec:
      selector:
        matchLabels:
          app: nginx
      replicas: 2ployment to run 2 pods matching the template
      template:
        metadata:
          labels:
            app: nginx
        spec:
          containers:
            - name: nginx
              image: nginx:1.7.9
              ports:
                - containerPort: 80