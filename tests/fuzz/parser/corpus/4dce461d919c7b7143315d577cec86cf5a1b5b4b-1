  es-foouters:
  route-foo:
   routes:
      - match:
         path:
          exact: /v0
        to:
          - app: export-test-image
            version: v0
      - match:
         path:
          exact: /v3
        to:
          - app: export-test-image
            version: v3
services:
  export-test-image:
    app: export-test-image
    autoscale:
      concurrency: 
      maxReplicas: 
